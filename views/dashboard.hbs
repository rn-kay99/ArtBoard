<div class="row">
    <div class="col s12">
        <h2>Dashboard</h2>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div class="card blue darken-3">
            <div class="card-content dashboard-card">
                <a href="/paintings/add" class="btn-floating btn-large white">
                    <i class="material-icons large icon-blue icon-large">add</i>
                </a>
                <div class="dashboard-card-content">
                    <div class="white-text dashboard-card-title">Erstelle ein neues Painting</div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 l4">
        <div class="card blue darken-3">
            <div class="card-content dashboard-card">
                <i class="material-icons large icon-white">image</i>
                <div class="dashboard-card-content">
                    <div class="dashboard-number white-text">{{paintings.length}}</div>
                    <div class="white-text">Anzahl deiner Paintings</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l4">
        <div class="card blue darken-3">
            <div class="card-content dashboard-card">
                <i class="material-icons large icon-white">person</i>
                <div class="dashboard-card-content">
                    <div class="dashboard-number white-text">0</div>
                    <div class="white-text">Paintings die du von anderen magst</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l4">
        <div class="card blue darken-3">
            <div class="card-content dashboard-card">
                <i class="material-icons large icon-white">people</i>
                <div class="dashboard-card-content">
                    <div class="dashboard-number white-text">0</div>
                    <div class="white-text">Paintings die andere von dir m√∂gen</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <h2>Deine Paintings</h2>
        {{#if paintings}}
        <div class="row">
            {{> _painting_card paintings=paintings}}
        </div>
        {{else}}
        <p>Du hast bisher noch keine Paintings erstellt.</p>
        {{/if}}
    </div>
</div>