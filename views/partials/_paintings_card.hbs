{{#each paintings}}
<div class="col s12 m6">
    <div class="card">
        <div class="card-image">
            <img src={{image}}>
            <a class="painting-like-button btn-floating btn-large halfway-fab red darken-2">
                <i class="material-icons icon-medium">favorite</i>
            </a>
        </div>
        <div class="card-content">
            <span class="card-title black-text">{{title}}</span>

            <div class="dashboard-picture-meta-data">
                <div>
                    <span class="black-text">KÃ¼nstler:</span>
                    <a href="/" class="black-text">{{user.displayName}}</a>
                </div>

                <div class="dashboard-picture-favorites">
                    <i class="material-icons small icon-red">favorite</i>
                    <span class="painting-likes black-text">{{likes}}</span>
                </div>
            </div>

        </div>
        <div class="card-action">
            <a href="/painting/{{id}}" class="btn red darken-1">Ansehen</a>
            <a href="/painting/edit/{{id}}" class="btn red darken-1">Bearbeiten</a>
        </div>
    </div>
</div>
{{/each}}